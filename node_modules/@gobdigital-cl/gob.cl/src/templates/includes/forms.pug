          include ../examples/form-controls-select
          pre(data-src='examples/form-controls-select.html')
      div#inputFiles.doc-subsection
        .doc-subsection-header
          h3 Input files #[a(href='#inputFiles') #]
        .doc-subsection-body
          include ../examples/form-controls-file
          pre(data-src='examples/form-controls-file.html')
      div#checkboxes.doc-subsection
        .doc-subsection-header
          h3 Checkboxes #[a(href='#checkboxes') #]
        .doc-subsection-body
          include ../examples/form-controls-checkbox
          pre(data-src='examples/form-controls-checkbox.html')
      div#radios.doc-subsection
