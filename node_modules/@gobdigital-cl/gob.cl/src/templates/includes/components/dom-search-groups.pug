.row
  .col-12
    .dom-search.search.mx-auto(data-groups='[".group-a", ".group-b", ".group-c"]')
      input.form-control(
        type='text', name='search',
        placeholder='Texto placeholder buscador con filtrado en grupos',
        aria-label='Texto placeholder buscador con filtrado en grupos',
        aria-describedby='searchAction'
      )
      .search-action
        button.btn.btn-outline-search.dom-search-behavior-cancel.d-none
          i.icon.cl.cl-close-line
        button#searchAction.btn.btn-outline-search.dom-search-behavior-search(type='submit')
          i.icon.cl.cl-filter

