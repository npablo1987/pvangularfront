.toolbar
  a(href='#').toolbar-btn.toolbar-behavior-contrast
    i.cl.cl-contrast
  .toolbar-btn-group
    a(href='#').toolbar-btn.toolbar-behavior-decrease
      i.cl.cl-decrease-text
    a(href='#').toolbar-btn.toolbar-behavior-increase
      i.cl.cl-increase-text
  if !hideReadSpeaker
    a(href='#').toolbar-btn.toolbar-behavior-read
      i.cl.cl-sound
  a(href='#').toolbar-btn.toolbar-toggler
    i.cl.cl-accessibility.toolbar-behavior-on
    span.toolbar-behavior-off X
