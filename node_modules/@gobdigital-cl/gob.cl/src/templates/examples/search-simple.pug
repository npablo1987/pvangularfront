form.simple-search.search.mx-auto(action='', method='GET')
  input.form-control(
    type='text',
    name='search',
    placeholder='Texto placeholder buscador simple con botón para limpiar input',
    aria-label='Texto placeholder buscador simple con botón para limpiar input',
    aria-describedby='searchAction'
    value='Haz click en el botón x para limpiar este texto'
  )
  .search-action
    button.btn.btn-outline-search.dom-search-behavior-cancel.d-none(type='button')
      i.icon.cl.cl-close-line
    button#searchAction.btn.btn-outline-search(type='submit')
      i.icon.cl.cl-search
