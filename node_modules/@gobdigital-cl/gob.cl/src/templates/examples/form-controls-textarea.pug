form.form-row
  .form-group.col-12
    label Ejemplo Textarea:
    textarea.form-control(
      type='password',
      placeholder='Escriba aquí',
      value="Texto de ejemplo"
    )
  .form-group.col-12
    label Ejemplo Textarea deshabilitado:
    textarea.form-control(
      type='password',
      placeholder='Escriba aquí',
      value="Texto de ejemplo",
      disabled
    )
  .form-group.col-12
    label Ejemplo Textarea readonly:
    textarea.form-control(
      type='password',
      placeholder='Escriba aquí',
      value="Texto de ejemplo",
      readonly
    )
