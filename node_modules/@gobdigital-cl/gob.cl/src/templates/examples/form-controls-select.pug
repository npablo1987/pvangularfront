- var options = ['1', '2', '3']
form.form-row
  .col-12
    .form-group
      label Ejemplo de Select:
      select.form-control
        each option in options
          option= option
    .form-group
      label Ejemplo de Select deshabilitado:
      select.form-control(disabled)
        each option in options
          option= option
  .col-12
    .form-group
      label Ejemplo de Select custom:
      select.custom-select
        each option in options
          option= option
    .form-group
      label Ejemplo de Select custom deshabilitado:
      select.custom-select(disabled)
        each option in options
          option= option
