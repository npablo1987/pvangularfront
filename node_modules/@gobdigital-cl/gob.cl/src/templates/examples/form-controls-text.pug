form.form-row
  .form-group.col-12
    label Ejemplo Input de texto:
    input.form-control(
      type='text',
      placeholder='Escriba aquí',
      value="Texto de ejemplo"
    )
  .form-group.col-12
    label Ejemplo Input de texto deshabilitado:
    input.form-control(
      type='text',
      placeholder='Escriba aquí',
      value="Texto de ejemplo",
      disabled
    )
  .form-group.col-12
    label Ejemplo Input de texto readonly:
    input.form-control(
      type='text',
      placeholder='Escriba aquí',
      value="Texto de ejemplo",
      readonly
    )
  .form-group.col-12
    label Ejemplo Input de texto readonly texto plano:
    input.form-control-plaintext(
      type='text',
      placeholder='Escriba aquí',
      value="Texto de ejemplo",
      readonly
    )
