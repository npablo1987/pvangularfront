form.form-row
  .form-group.col-md-6
    label Ejemplo Input de texto
    input.form-control(
      type='text',
      placeholder='Escriba aquí'
    )
  .form-group.col-md-6
    label Ejemplo Input de contraseña
    input.form-control(
      type='password',
      placeholder='Escriba aquí'
    )
  .form-group.col-12
    label Ejemplo Textarea
    textarea.form-control(
      type='password',
      placeholder='Escriba aquí'
    )

  //- Select
  .form-group.col-md-6
    label Ejemplo de Select
    select.form-control
      - var n = 0;
      while n < 4
        option= n++
  .form-group.col-md-6
    label Ejemplo de Select custom
    select.custom-select
      - var n = 0;
      while n < 4
        option= n++

  //- File
  .form-group.col-md-6
    label Ejemplo de Input de archivo
    input.form-control-file(type='file')
  .form-group.col-md-6
    label Ejemplo de Input de archivo custom
    .custom-file
      input#customFileExample.custom-file-input(type='file')
      label.custom-file-label(
        for='customFileExample',
        data-browse='Seleccionar'
      )
        | Escoge un archivo

  //- Checkbox
  .form-group.col-md-4
    .form-check
      input#checkExample.form-check-input(type='checkbox')
      label.form-check-label(for='checkExample') Ejemplo de Checkbox

  .form-group.col-md-4
    .custom-control.custom-checkbox
      input#customCheckExample.custom-control-input(type='checkbox')
      label.custom-control-label(for='customCheckExample') Ejemplo de Checkbox custom

  .form-group.col-md-4
    .custom-control.custom-switch
      input#customSwitchExample.custom-control-input(type='checkbox')
      label.custom-control-label(for='customSwitchExample') Ejemplo de Switch

  //- Radio
  .form-group.col-md-4
    .form-check
      input#radioExample.form-check-input(type='radio')
      label.form-check-label(for='radioExample') Ejemplo de Radio

  .form-group.col-md-4
    .custom-control.custom-radio
      input#customRadioExample.custom-control-input(type='radio')
      label.custom-control-label(for='customRadioExample') Ejemplo de Radio custom

  //- Range
  .form-group.col-md-6
    label Ejemplo de Input de rango
    input.form-control-range(type='range')
  .form-group.col-md-6
    label Ejemplo de Input de rango custom
    input.custom-range(type='range')
